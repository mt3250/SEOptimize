// FILE: src/app/dashboard/page.tsx
"use client";

import { useState } from 'react';
import { useRouter } from 'next/navigation';
import ContentAnalyzer from '@/components/ContentAnalyzer';
import ResultsPanel from '@/components/ResultsPanel';
import DashboardSidebar from '@/components/DashboardSidebar';
import DashboardHeader from '@/components/DashboardHeader';

export default function Dashboard() {
  const [content, setContent] = useState('');
  const [keywords, setKeywords] = useState('');
  const [results, setResults] = useState(null);
  const [isAnalyzing, setIsAnalyzing] = useState(false);
  const router = useRouter();

  const handleAnalyze = async () => {
    // Don't analyze if no content or if already analyzing
    if (!content.trim() || isAnalyzing) return;
    
    setIsAnalyzing(true);
    
    try {
      const response = await fetch('/api/analyze', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          content,
          keywords: keywords.split(',').map(k => k.trim()).filter(k => k),
        }),
      });
      
      if (!response.ok) {
        throw new Error('Failed to analyze content');
      }
      
      const data = await response.json();
      setResults(data);
    } catch (error) {
      console.error('Error analyzing content:', error);
      // Handle error state
    } finally {
      setIsAnalyzing(false);
    }
  };

  return (
    <div className="flex h-screen bg-gray-100">
      <DashboardSidebar />
      
      <div className="flex-1 flex flex-col overflow-hidden">
        <DashboardHeader />
        
        <main className="flex-1 overflow-y-auto p-4">
          <div className="max-w-7xl mx-auto">
            <div className="bg-white rounded-lg shadow overflow-hidden">
              <div className="p-6">
                <h1 className="text-2xl font-bold mb-6">Content Optimizer</h1>
                
                <ContentAnalyzer 
                  content={content}
                  setContent={setContent}
                  keywords={keywords}
                  setKeywords={setKeywords}
                  onAnalyze={handleAnalyze}
                  isAnalyzing={isAnalyzing}
                />
                
                {results && <ResultsPanel results={results} />}
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>
  );
}

// FILE: src/components/ContentAnalyzer.tsx
import React from 'react';

interface ContentAnalyzerProps {
  content: string;
  setContent: (content: string) => void;
  keywords: string;
  setKeywords: (keywords: string) => void;
  onAnalyze: () => void;
  isAnalyzing: boolean;
}

const ContentAnalyzer: React.FC<ContentAnalyzerProps> = ({
  content,
  setContent,
  keywords,
  setKeywords,
  onAnalyze,
  isAnalyzing
}) => {
  return (
    <div className="mb-8">
      <div className="mb-4">
        <label htmlFor="keywords" className="block text-sm font-medium text-gray-700 mb-1">
          Target Keywords (comma separated)
        </label>
        <input
          id="keywords"
          type="text"
          value={keywords}
          onChange={(e) => setKeywords(e.target.value)}
          placeholder="e.g. content optimization, SEO, digital marketing"
          className="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
        />
      </div>
      
      <div className="mb-4">
        <label htmlFor="content" className="block text-sm font-medium text-gray-700 mb-1">
          Your Content
        </label>
        <textarea
          id="content"
          value={content}
          onChange={(e) => setContent(e.target.value)}
          placeholder="Paste your content here to analyze..."
          rows={12}
          className="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
        />
      </div>
      
      <div className="flex justify-between items-center">
        <div className="text-sm text-gray-500">
          {content.length > 0 ? `${content.length} characters | ~${Math.ceil(content.length / 5)} words` : 'No content to analyze'}
        </div>
        <button
          onClick={onAnalyze}
          disabled={!content.trim() || isAnalyzing}
          className={`px-6 py-2 rounded-md font-medium ${
            !content.trim() || isAnalyzing
              ? 'bg-gray-300 text-gray-500 cursor-not-allowed'
              : 'bg-indigo-600 text-white hover:bg-indigo-700'
          } transition duration-300`}
        >
          {isAnalyzing ? 'Analyzing...' : 'Analyze Content'}
        </button>
      </div>
    </div>
  );
};

export default ContentAnalyzer;

// FILE: src/components/ResultsPanel.tsx
import React, { useState } from 'react';
import { 
  CheckCircleIcon, 
  ExclamationCircleIcon,
  LightBulbIcon,
  DocumentTextIcon,
  ArrowPathIcon
} from '@heroicons/react/24/outline';

interface ResultsPanelProps {
  results: any; // Type this properly based on your API response
}

const ResultsPanel: React.FC<ResultsPanelProps> = ({ results }) => {
  const [activeTab, setActiveTab] = useState('overview');
  
  // Placeholder scores for demo
  const overallScore = results?.overallScore || 78;
  const seoScore = results?.seoScore || 72;
  const readabilityScore = results?.readabilityScore || 85;
  const engagementScore = results?.engagementScore || 76;
  
  // Color based on score
  const getScoreColor = (score: number) => {
    if (score >= 80) return 'text-green-500';
    if (score >= 60) return 'text-yellow-500';
    return 'text-red-500';
  };
  
  return (
    <div className="mt-8 bg-gray-50 p-6 rounded-lg">
      <h2 className="text-xl font-bold mb-6">Content Analysis Results</h2>
      
      {/* Score Overview */}
      <div className="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
        <div className="bg-white p-4 rounded-lg shadow-sm">
          <div className="text-sm text-gray-500 mb-1">Overall Score</div>
          <div className={`text-3xl font-bold ${getScoreColor(overallScore)}`}>{overallScore}/100</div>
        </div>
        <div className="bg-white p-4 rounded-lg shadow-sm">
          <div className="text-sm text-gray-500 mb-1">SEO Score</div>
          <div className={`text-3xl font-bold ${getScoreColor(seoScore)}`}>{seoScore}/100</div>
        </div>
        <div className="bg-white p-4 rounded-lg shadow-sm">
          <div className="text-sm text-gray-500 mb-1">Readability Score</div>
          <div className={`text-3xl font-bold ${getScoreColor(readabilityScore)}`}>{readabilityScore}/100</div>
        </div>
        <div className="bg-white p-4 rounded-lg shadow-sm">
          <div className="text-sm text-gray-500 mb-1">Engagement Score</div>
          <div className={`text-3xl font-bold ${getScoreColor(engagementScore)}`}>{engagementScore}/100</div>
        </div>
      </div>
      
      {/* Tabs */}
      <div className="border-b border-gray-200 mb-6">
        <nav className="flex -mb-px">
          <button
            onClick={() => setActiveTab('overview')}
            className={`mr-8 py-4 text-sm font-medium ${
              activeTab === 'overview'
                ? 'text-indigo-600 border-b-2 border-indigo-600'
                : 'text-gray-500 hover:text-gray-700 hover:border-gray-300'
            }`}
          >
            Overview
          </button>
          <button
            onClick={() => setActiveTab('seo')}
            className={`mr-8 py-4 text-sm font-medium ${
              activeTab === 'seo'
                ? 'text-indigo-600 border-b-2 border-indigo-600'
                : 'text-gray-500 hover:text-gray-700 hover:border-gray-300'
            }`}
          >
            SEO Analysis
          </button>
          <button
            onClick={() => setActiveTab('readability')}
            className={`mr-8 py-4 text-sm font-medium ${
              activeTab === 'readability'
                ? 'text-indigo-600 border-b-2 border-indigo-600'
                : 'text-gray-500 hover:text-gray-700 hover:border-gray-300'
            }`}
          >
            Readability
          </button>
          <button
            onClick={() => setActiveTab('suggestions')}
            className={`py-4 text-sm font-medium ${
              activeTab === 'suggestions'
                ? 'text-indigo-600 border-b-2 border-indigo-600'
                : 'text-gray-500 hover:text-gray-700 hover:border-gray-300'
            }`}
          >
            AI Suggestions
          </button>
        </nav>
      </div>
      
      {/* Tab Content */}
      <div className="mb-8">
        {activeTab === 'overview' && (
          <div>
            <h3 className="text-lg font-semibold mb-4">Content Summary</h3>
            
            <div className="bg-white p-5 rounded-lg shadow-sm mb-6">
              <h4 className="font-medium mb-3">Key Findings</h4>
              <ul className="space-y-3">
                <li className="flex items-start">
                  <CheckCircleIcon className="h-5 w-5 text-green-500 mr-2 flex-shrink-0 mt-0.5" />
                  <span>Good overall structure with proper headings and paragraphs</span>
                </li>
                <li className="flex items-start">
                  <CheckCircleIcon className="h-5 w-5 text-green-500 mr-2 flex-shrink-0 mt-0.5" />
                  <span>Content length is appropriate for the topic (1,200 words)</span>
                </li>
                <li className="flex items-start">
                  <ExclamationCircleIcon className="h-5 w-5 text-yellow-500 mr-2 flex-shrink-0 mt-0.5" />
                  <span>Primary keyword density is below recommended range (0.8%)</span>
                </li>
                <li className="flex items-start">
